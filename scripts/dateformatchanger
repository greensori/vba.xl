Sub abc()
    Dim i As Integer
    Dim row As Integer
    Dim Dvalue As String
    
    row = 3
    Do While Sheets(1).Cells(row, 1) <> ""
        Dvalue = Sheets(1).Cells(row, 1)
        Dvalue = Format(Dvalue, "yyyymmdd")
        Sheets(1).Cells(row, 2) = Dvalue
        row = (row + 1)
    Loop
    
End Sub


